server.port=${PORT:8080}
spring.application.name=course-selector

# ============ MySQL Database Configuration ============
spring.datasource.url=jdbc:mysql://localhost:3306/course_selector_db?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
spring.datasource.username=${DB_USERNAME:root}
spring.datasource.password=${DB_PASSWORD:your_password_here}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
spring.jpa.properties.hibernate.enable_lazy_load_no_trans=true

# ============ Yeditepe API Configuration ============
yeditepe.api.base-url=https://api7.yeditepe.edu.tr

# Yeditepe Auth Credentials (set via environment variables)
yeditepe.auth.username=${YEDITEPE_USERNAME:your_student_id}
yeditepe.auth.password=${YEDITEPE_PASSWORD:your_password}

# ============ Security Configuration ============
# JWT Secret Key (use a strong key in production)
jwt.secret=${JWT_SECRET:change_this_to_a_strong_secret_key_at_least_64_characters_long_for_hs512_algorithm}
# Access token: 1 hour
jwt.expiration=3600000
# Refresh token: 90 days
jwt.refresh-expiration=7776000000

# CORS Configuration
cors.allowed-origins=${CORS_ORIGINS:http://localhost:5173,http://localhost:8080}

# ============ Static Resources ============
spring.web.resources.static-locations=classpath:/static/
spring.mvc.throw-exception-if-no-handler-found=true

# ============ Data Sync Configuration ============
data.sync.cron=${DATA_SYNC_CRON:0 0 6 * * *}

# ============ Logging ============
logging.level.com.yeditepe.courseselector=INFO
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE
